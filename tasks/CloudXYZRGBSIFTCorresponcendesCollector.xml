<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Tomasz Kornuta</name>
			<link></link>
		</Author>
	
		<Description>
			<brief>CloudXYZRGBSIFTCorresponcendesCollector</brief>
			<full>Stores XYZRGB and XYZSIFT point clouds readed from sequences in collector, enables computation of SIFT correspondences between all clouds and displaying selected point cloud pairs with correspondences in viewer.</full>
		</Description>
	</Reference>

<!--------------------------------------------------------------------------------------------------------------------->
<!--------------------------------------------------------------------------------------------------------------------->
<!-- task definition -->
<!--------------------------------------------------------------------------------------------------------------------->
<!--------------------------------------------------------------------------------------------------------------------->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Processing" period="1">
<!--------------------------------------------------------------------------------------------------------------------->
<!--                                     Sources
<!--------------------------------------------------------------------------------------------------------------------->

				<Component name="SequenceTrigger" type="CvBasic:Trigger" priority="1" bump="0">
					<param name="auto_trigger">0</param>						
				</Component>

				<Component name="SequenceCloudXYZRGB" type="PCL:PCDSequence" priority="11" bump="0">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/2015-05-21/lipton_views/</param>
					<param name="sequence.pattern">.*_xyzrgb.pcd</param>
					<param name="mode.loop">0</param>
					<param name="mode.auto_next_cloud">0</param>						
					<param name="mode.auto_publish_cloud">1</param>						
					<param name="cloud.xyzrgb">1</param>						
				</Component>

				<Component name="SequenceCloudXYZSIFT" type="PCL:PCDSequence" priority="12" bump="0">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/2015-05-21/lipton_views/</param>
					<param name="sequence.pattern">.*_xyzsift.pcd</param>
					<param name="mode.loop">0</param>
					<param name="mode.auto_next_cloud">0</param>						
					<param name="mode.auto_publish_cloud">1</param>						
					<param name="cloud.xyzsift">1</param>						
				</Component>


<!--------------------------------------------------------------------------------------------------------------------->
<!--                                     Registration
<!--------------------------------------------------------------------------------------------------------------------->

				<Component name="CloudStorage" type="Registration:CloudStorage" priority="20" bump="0">
					<param name="CloudsLimit">0</param>
					<param name="ReturnPreviousMergedCloud">0</param>
				</Component>

                		<Component name="CorrespondenceEstimation" type="Registration:CorrespondenceEstimation" priority="21" bump="0">
				</Component>

			</Executor>
		</Subtask>	

<!--------------------------------------------------------------------------------------------------------------------->
<!--                              Visualization and saving
<!--------------------------------------------------------------------------------------------------------------------->

		<Subtask name="Display">
			<Executor name="DisplayExec" period="0.5">

				<Component name="Viewer" type="SIFTObjectModel:CorrespondencesViewer" priority="101" bump="0">
					<param name="title">Model point cloud</param>
                                        <param name="coordinate_system">0</param>
                                        <param name="tx">0</param>
                                        <param name="ty">0</param>
                                        <param name="tz">0.1</param>
				</Component>

			</Executor>
		</Subtask>	
	</Subtasks>


<!--------------------------------------------------------------------------------------------------------------------->
<!--------------------------------------------------------------------------------------------------------------------->
<!-- pipes connecting datastreams -->
<!--------------------------------------------------------------------------------------------------------------------->
<!--------------------------------------------------------------------------------------------------------------------->

	<DataStreams>
<!--------------------------------------------------------------------------------------------------------------------->
<!--                                     "" sequence
<!--------------------------------------------------------------------------------------------------------------------->
		<Source name="SequenceTrigger.out_trigger">
			<sink>SequenceCloudXYZRGB.in_next_cloud_trigger</sink><!---->
			<sink>SequenceCloudXYZSIFT.in_next_cloud_trigger</sink>
		</Source>

		<Source name="SequenceCloudXYZRGB.out_end_of_sequence_trigger">
			<sink>SequenceTrigger.in_stop_auto_trigger</sink>
		</Source><!---->

		<Source name="SequenceCloudXYZSIFT.out_end_of_sequence_trigger">
			<sink>SequenceTrigger.in_stop_auto_trigger</sink>
		</Source><!---->

		<Source name="SequenceCloudXYZRGB.out_cloud_xyzrgb">
			<sink>Viewer.in_cloud_xyzrgb1</sink>
		</Source><!---->

		<Source name="SequenceCloudXYZSIFT.out_cloud_xyzsift">
			<sink>Viewer.in_cloud_xyzsift1</sink>
			<sink>CorrespondenceEstimation.in_src_cloud_xyzsift</sink><!---->
		</Source><!---->





		<Source name="CorrespondenceEstimation.out_correspondences">
			<sink>Viewer.in_correspondences</sink>
		</Source> <!---->


	</DataStreams>
</Task>


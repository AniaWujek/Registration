<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Tomasz Kornuta</name>
			<link></link>
		</Author>
	
		<Description>
			<brief>Displays two sets of XYZRGB and XYZSIFT point clouds readed from sequences and .</brief>
			<full>Displays point clouds generated from a sequence of PCD files.</full>
		</Description>
	</Reference>

<!--------------------------------------------------------------------------------------------------------------------->
<!--------------------------------------------------------------------------------------------------------------------->
<!-- task definition -->
<!--------------------------------------------------------------------------------------------------------------------->
<!--------------------------------------------------------------------------------------------------------------------->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Processing" period="1">
<!--------------------------------------------------------------------------------------------------------------------->
<!--                                     Sources
<!--------------------------------------------------------------------------------------------------------------------->

				<Component name="FirstSequenceTrigger" type="CvBasic:Trigger" priority="1" bump="0">
					<param name="auto_trigger">0</param>						
				</Component>

				<Component name="SecondSequenceTrigger" type="CvBasic:Trigger" priority="2" bump="0">
					<param name="auto_trigger">0</param>						
				</Component>

				<Component name="FirstSequenceCloudXYZRGB" type="PCL:PCDSequence" priority="11" bump="0">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/2015-05-21/lipton_views/</param>
					<param name="sequence.pattern">.*_xyzrgb.pcd</param>
					<param name="mode.loop">0</param>
					<param name="mode.auto_next_cloud">0</param>						
					<param name="mode.auto_publish_cloud">1</param>						
					<param name="cloud.xyzrgb">1</param>						
				</Component>

				<Component name="FirstSequenceCloudXYZSIFT" type="PCL:PCDSequence" priority="12" bump="0">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/2015-05-21/lipton_views/</param>
					<param name="sequence.pattern">.*_xyzsift.pcd</param>
					<param name="mode.loop">0</param>
					<param name="mode.auto_next_cloud">0</param>						
					<param name="mode.auto_publish_cloud">1</param>						
					<param name="cloud.xyzsift">1</param>						
				</Component>

				<Component name="SecondSequenceCloudXYZRGB" type="PCL:PCDSequence" priority="13" bump="0">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/2015-05-21/lipton_views/</param>
					<param name="sequence.pattern">.*_xyzrgb.pcd</param>
					<param name="mode.loop">0</param>
					<param name="mode.auto_next_cloud">0</param>						
					<param name="mode.auto_publish_cloud">1</param>						
					<param name="cloud.xyzrgb">1</param>						
				</Component>

				<Component name="SecondSequenceCloudXYZSIFT" type="PCL:PCDSequence" priority="14" bump="0">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/2015-05-21/lipton_views/</param>
					<param name="sequence.pattern">.*_xyzsift.pcd</param>
					<param name="mode.loop">0</param>
					<param name="mode.auto_next_cloud">0</param>						
					<param name="mode.auto_publish_cloud">1</param>						
					<param name="cloud.xyzsift">1</param>						
				</Component>

                		<Component name="CorrespondenceEstimation" type="Registration:CorrespondenceEstimation" priority="20" bump="0">
				</Component>

			</Executor>
		</Subtask>	

<!--------------------------------------------------------------------------------------------------------------------->
<!--                              Visualization and saving
<!--------------------------------------------------------------------------------------------------------------------->

		<Subtask name="Display">
			<Executor name="DisplayExec" period="0.5">

				<Component name="Viewer" type="SIFTObjectModel:CorrespondencesViewer" priority="101" bump="0">
					<param name="title">Model point cloud</param>
                                        <param name="coordinate_system">0</param>
                                        <param name="tx">0.1</param>
                                        <param name="ty">0.1</param>
                                        <param name="tz">0.1</param>
				</Component>

			</Executor>
		</Subtask>	
	</Subtasks>


<!--------------------------------------------------------------------------------------------------------------------->
<!--------------------------------------------------------------------------------------------------------------------->
<!-- pipes connecting datastreams -->
<!--------------------------------------------------------------------------------------------------------------------->
<!--------------------------------------------------------------------------------------------------------------------->

	<DataStreams>
<!--------------------------------------------------------------------------------------------------------------------->
<!--                                     "First" sequence
<!--------------------------------------------------------------------------------------------------------------------->
		<Source name="FirstSequenceTrigger.out_trigger">
			<sink>FirstSequenceCloudXYZRGB.in_next_cloud_trigger</sink><!---->
			<sink>FirstSequenceCloudXYZSIFT.in_next_cloud_trigger</sink>
		</Source>

		<Source name="FirstSequenceCloudXYZRGB.out_end_of_sequence_trigger">
			<sink>FirstSequenceTrigger.in_stop_auto_trigger</sink>
		</Source><!---->

		<Source name="FirstSequenceCloudXYZSIFT.out_end_of_sequence_trigger">
			<sink>FirstSequenceTrigger.in_stop_auto_trigger</sink>
		</Source><!---->

		<Source name="FirstSequenceCloudXYZRGB.out_cloud_xyzrgb">
			<sink>Viewer.in_cloud_xyzrgb1</sink>
		</Source><!---->

		<Source name="FirstSequenceCloudXYZSIFT.out_cloud_xyzsift">
			<sink>Viewer.in_cloud_xyzsift1</sink>
			<sink>CorrespondenceEstimation.in_cloud_source_xyzsift</sink><!---->
		</Source><!---->

<!--------------------------------------------------------------------------------------------------------------------->
<!--                                     "Second" sequence
<!--------------------------------------------------------------------------------------------------------------------->

		<Source name="SecondSequenceTrigger.out_trigger">
			<sink>SecondSequenceCloudXYZRGB.in_next_cloud_trigger</sink><!---->
			<sink>SecondSequenceCloudXYZSIFT.in_next_cloud_trigger</sink>
		</Source>

		<Source name="SecondSequenceCloudXYZRGB.out_end_of_sequence_trigger">
			<sink>SecondSequenceTrigger.in_stop_auto_trigger</sink>
		</Source><!---->

		<Source name="SecondSequenceCloudXYZSIFT.out_end_of_sequence_trigger">
			<sink>SecondSequenceTrigger.in_stop_auto_trigger</sink>
		</Source><!---->

		<Source name="SecondSequenceCloudXYZRGB.out_cloud_xyzrgb">
			<sink>Viewer.in_cloud_xyzrgb2</sink>
		</Source><!---->

		<Source name="SecondSequenceCloudXYZSIFT.out_cloud_xyzsift">
			<sink>Viewer.in_cloud_xyzsift2</sink>
			<sink>CorrespondenceEstimation.in_cloud_target_xyzsift</sink><!---->
		</Source><!---->


		<Source name="CorrespondenceEstimation.out_correspondences">
			<sink>Viewer.in_correspondences</sink>
		</Source> <!---->


	</DataStreams>
</Task>

